<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cache directory for captured images -->
    <cache-path
        name="images"
        path="images/" />

    <!-- External cache directory as fallback -->
    <external-cache-path
        name="external_images"
        path="images/" />

    <!-- Files directory for other media -->
    <files-path
        name="files"
        path="." />
</paths>

